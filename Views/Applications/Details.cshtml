@model Storefront.Models.DAO.ApplicationDao
@{
    ViewData["Title"] = Model.Name;
}

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">@Model.Name</h1>
        <p class="lead">@Model.ElevatorPitch</p>
        <a class="btn btn-primary btn-lg" href="#" role="button">Download</a>
    </div>
</div>
<div class="container">
    <section>
        <p>@Model.Description</p>
    </section>
    <section>
        <h2>Comments</h2>
        @foreach (var comment in Model.Comments)
        {
            <partial name="_ApplicationComment" model="comment" />
        }
    </section>
</div>